<%# Jobs Banner %>
<%# Config %>
<% available_jobs = 0 %>
<% available_job = "" %>
<% data.jobs.list.each do |job| %>
  <% if job.is_published %>
    <% available_jobs = available_jobs + 1 %>
    <% available_job = job %>
  <% end %>
<% end %>
<%# End %>
<%# Content %>
<% if available_jobs > 0 %>
  <section class="pv3 ph15 bt b--light-gray">
    <header class="lato tc">
      <h1 class="ma0 mb1 f15 fw4 lh01"><%= data.jobs.banner.title %></h1>
      <% if available_jobs === 1 %>
        <p class="ma0 mb2 f1 fw4 lh15 gray"><%= available_job.ad_subtitle %></p>
      <% else %>
        <p class="ma0 mb2 f1 fw4 lh15 gray"><%= data.jobs.banner.subtitle %></p>
      <% end %>
    </header>
    <% if available_jobs === 1 %>
      <%# ### %>
      <%# HREF PENDING %>
      <%# ### %>
      <a class="db center w8 pv05 lato white fw7 tc bg-blue br0125 no-underline" href=""><%= data.jobs.banner.buttons.single %></a>
    <% else %>
      <%# ### %>
      <%# HREF PENDING %>
      <%# ### %>
      <a class="db center w8 pv05 lato white fw7 tc bg-blue br0125 no-underline" href=""><%= data.jobs.banner.buttons.multiple %></a>
    <% end %>
  </section>
<% end %>
<%# End %>
